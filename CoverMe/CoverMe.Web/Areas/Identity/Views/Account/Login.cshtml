@using Microsoft.AspNetCore.Identity
@using CoverMe.Domain.Entities.Identity

@model CoverMe.Web.Areas.Identity.Models.AccountViewModels.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@inject CoverMe.Domain.Entities.Settings.ApplicationSettings Settings

@{
    ViewData["Title"] = "Login";
    ViewData["CopyrightYear"] = DateTime.Now.Year;
}
@{
    var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
    if (loginProviders.Count == 0)
    {
        <div>
            <p>
                There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                for details on setting up this ASP.NET application to support logging in via external services.
            </p>
        </div>
    }
    else
    {
        <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <div>
                <p>
                    <button type="submit" class="btn btn-block btn-lg btn-google" style="font-size: 1.15rem;" name="provider" value="Google" title="Log in using your Google account"><span class="fa fa-google"></span> Sign in with Google</button>
                </p>
            </div>
        </form>
    }
}

<div class=" border-top-wide border-primary d-flex flex-column">
    <div>
      <div class="container-tight py-4">
        <div class="text-center mb-2">
          <a href="." class="navbar-brand navbar-brand-autodark"><img src="@Settings.LogoImageUrlSmall" style="height: 7rem" alt=""></a>
        </div>
          <form class="card card-md" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" autocomplete="off">
              <div class="card-body">
                  <h2 class="card-title text-center mb-4">Login to your account</h2>
                  <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="mb-3">
                      <label asp-for="Username" class="form-label"></label>
                      <input asp-for="Username" class="form-control" />
                      <span asp-validation-for="Username" class="text-danger"></span>
                  </div>
                  <div class="mb-2">
                      <label class="form-label">
                          Password
                          <span class="form-label-description">
                              <a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>
                          </span>
                      </label>
                      <div class="input-group input-group-flat">
                          <input asp-for="Password" class="form-control" />
                          <span class="input-group-text">
                              <a href="#" onclick="togglePassword('Password')" class="link-secondary toggle_pwd" title="Show password" data-bs-toggle="tooltip"><!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><circle cx="12" cy="12" r="2"/><path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7"/></svg>
                              </a>
                          </span>
                      </div>
                      <span asp-validation-for="Password" class="text-danger"></span>                          
                  </div>
                  <div class="mb-2">
                      <label class="form-check">
                          <input asp-for="RememberMe" class="form-check-input"/>
                          <span class="form-check-label">Remember me on this device</span>
                      </label>
                  </div>
                  <div class="form-footer">
                      <button type="submit" class="btn btn-outline-blue w-100 text-orange">Sign in</button>
                  </div>
              </div>
              <div class="hr-text">or</div>
              <div class="card-body">
                  <div class="row">
                      <div class="col">
                          <a href="#" class="btn btn-white w-100">
                              <!-- Download SVG icon from http://tabler-icons.io/i/brand-google -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="text text-google" width="24" height="24" viewBox="0 0 24 24" stoke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z"/></svg>
                                Google
                          </a></div>
                  </div>
              </div>
          </form>
        <div class="text-center text-muted mt-3">
          Don't have account yet? <a asp-area="Identity" asp-controller="Account" asp-action="Register" tabindex="-1">Register</a>
        </div>
      </div>
    </div>
</div>    


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script type="text/javascript">
        function togglePassword(elemid) {
            var x = document.getElementById(elemid);
            x.type = x.type === "password" ? "text" : "password";
        }
    </script>

}
