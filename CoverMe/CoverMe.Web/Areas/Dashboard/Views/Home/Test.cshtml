@model CoverMe.Web.Areas.Dashboard.Models.HomeViewModels.TestViewModel

<div class="card">
	<div class="card-body">
        
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="tab-content">
				<div class="tab-pane show active" id="tabs-core">
					<div class="row pt-2 pb-3">
						<div class="col">
							<p class="m-0 text">Please fill all relevant forms.</p>
						</div>
					</div>
					<div class="row">
						<div class="col-md-3">
							<div class="form-group">
                                <label asp-for="Firstname" class="control-label"></label>
								<input asp-for="Firstname" placeholder="enter first name" />
                                <span asp-validation-for="Lastname" class="text-danger"></span>
								<input asp-for="Lastname" placeholder="enter last name" />
                                <span asp-validation-for="Date" class="text-danger"></span>
								<input asp-for="Date" placeholder="enter date" />
								<input type="submit" id="submitBtn" value="submit">                                
							</div>
                        </div>
					</div>
				</div>
				<div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
						
				</div>
			</div>		
		</form>
	</div>
</div>